#include <иопоток>
#include <cmath>
использование пространства имен std;
классовый треугольник {
частный:
    плавать а, б, в;
публичный:
    логическое значение exst_tr() {
        return ((a + b > c) && (b + c > a) && (a + c > b));
    }
    недействительный набор (с плавающей запятой a1, с плавающей запятой b1, с плавающей запятой c1) {
        а = а1;
        б = б1;
        с = с1;
    }
    пустое шоу () {
        cout << "1 сторона: " << a << endl;
        cout << "2 сторона: " << b << endl;
        cout << "3 сторона: " << c << endl;
    }
    плавающий периметр () {
        поплавок p = а + b + с;
        вернуть р;
    }
    плавающий квадрат () {
        float minip = (a + b + c) / 2;
        float s = sqrt(minip * (minip - a) * (minip - b) * (minip - c));
        возврат с;
    }
};
основной ()
{
    setlocale(LC_ALL, "Русский");
    треугольник tr[3];
    плавать а, б, в;
    интервал я = 0;
    в то время как (я < 3)
    {
        cout << "стороны треугольника" << endl;
        цин >> а >> б >> с;
        tr[i].set(а, б, в);
        если (tr[i].exst_tr())
        {
            я++;
        }
        еще
        {
            cout << "не существует";
        }
    }
    для (целое я = 0; я < 3; я ++) {
        тр[я].show();
        cout << "периметр " << tr[i].perimetr() << endl;
        cout << "площадь" << tr[i].square() << endl;
    }
    вернуть 0;
}
